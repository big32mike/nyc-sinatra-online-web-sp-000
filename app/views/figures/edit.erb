<h1>Edit Figure</h1>
<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="figure_name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  
  <h3>Titles</h3>
  
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.name %>" <%= 'checked' if @figure.titles.include?(title) %> ><%= title.name %>
    <br>
  <% end %>
  
  <h3>Create New Title:</h3>
  <input type="text" name="title[name]">

  <h3>Landmarks</h3>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.name %>" <%= 'checked' if @figure.landmarks.include?(landmark) %> ><%= landmark.name %>
    <br>
  <% end %>

  <h3>Create New Landmark:</h3>

  <label for="landmark_name">Name:</label>
  <input type="text" name="landmark[name]" id="landmark_name">
  <label for="landmark_year_completed">Year:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  <br>
  <input type="submit" value="Update Figure">
</form>