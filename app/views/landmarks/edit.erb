<h2>Edit Historical Landmark</h2>

<form class="" action="/landmarks/<%= @landmark.id %>" method="post">
  <label for="landmark_name">Name:</label>
  <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="landmark_name">
  <label for="landmark_year_completed">Year:</label>
  <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="landmark_year_completed">
  <input type="submit" value="Update Landmark">
</form>

<br><br>

<a class="button" href="/landmarks">Landmarks</a>
